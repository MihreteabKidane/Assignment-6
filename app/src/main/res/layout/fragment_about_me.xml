<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/aboutMe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.about.AboutMeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Who am I?"
        android:textSize="24sp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp">

            </Space>

            <androidx.cardview.widget.CardView
                android:id="@+id/pInfoCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="25dp"
                android:elevation="15dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="12dp"
                tools:targetApi="lollipop">


                <TextView
                    android:id="@+id/pInfoTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                  android:fontFamily="sans-serif-light"
                    android:text="@string/about_me_personalInfo"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:textStyle="" />



            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Strengths"
                android:textSize="24sp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp">

            </Space>

            <androidx.cardview.widget.CardView
                android:id="@+id/strenghtCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="25dp"
                android:elevation="15dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="12dp"
                tools:targetApi="lollipop">


                <TextView
                    android:id="@+id/strengthTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/strength"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:textStyle="" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Weaknesses"
                android:textSize="24sp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp">

            </Space>

            <androidx.cardview.widget.CardView
                android:id="@+id/weaknessCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="25dp"
                android:elevation="15dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="12dp"
                tools:targetApi="lollipop">


                <TextView
                    android:id="@+id/weaknessTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/weakness"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:textStyle="" />


            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Education"
                android:textSize="24sp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp">

            </Space>

            <androidx.cardview.widget.CardView
                android:id="@+id/educationCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="25dp"
                android:elevation="15dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="12dp"
                tools:targetApi="lollipop">


                <TextView
                    android:id="@+id/educationTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/education"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:textStyle="" />


            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"></Space>


        </LinearLayout>

    </ScrollView>

</FrameLayout>